#:import hex kivy.utils.get_color_from_hex
<PlotComponent>
	id: 'test'
	val: 0

	canvas.before:
		Color:
			rgb: (0.05,0.05,0.05)
		Rectangle:
			pos:list(map(lambda x: x-1,self.pos))
			size: (self.width + 2, self.height + 2)

	canvas:
		Color:
			rgb: hex('#3492eb')
		Rectangle:
			pos:self.pos
			size:(self.width, self.height)

<Plot>
    orientation:'lr-bt'
    id: plot
    values:[]

	canvas.before:
		Color:
			rgb: .95,.95,.95
	    Rectangle:
	    	pos:self.pos
	    	size:self.size

<RootLayout>:
	orientation:'vertical'
	canvas.before:
		Color:
			rgb: 0.1, 0.1, 0.1
		Rectangle:
			pos:self.pos
			size:self.size
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.2
		Label:
			text:"Data UI"
			size_hint_x:0.8
		Button:
			text:"Run Sim"
			size_hint_x: 0.2
			on_touch_down: print('pressed')

	BoxLayout:
		orientation: 'horizontal'
		Label:
			text: 'y-axis'
			size_hint_x: 0.05
		Plot:
			id: plot
			padding: 20
	Label:
		text:"x-axis"
		size_hint_y: 0.1

RootLayout