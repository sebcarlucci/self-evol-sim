#:import hex kivy.utils.get_color_from_hex
#:import DataView view.data_view
#:import SimulationView view.simulation_view

<PlotComponent>
	canvas.before:
		Color:
			rgb: (0.05,0.05,0.05)
		Rectangle:
			pos:list(map(lambda x: x-1,self.pos))
			size: (self.width + 2, self.height + 2)

	canvas:
		Color:
			rgb: hex('#3492eb')
		Rectangle:
			pos:self.pos
			size:(self.width, self.height)

<Plot>
    orientation:'lr-bt'
    values:[]

	canvas.before:
		Color:
			rgb: .95,.95,.95
	    Rectangle:
	    	pos:self.pos
	    	size:self.size

	canvas:
		Color:
			rgb: hex('#3492eb')

<DataView>:
	orientation:'vertical'
	canvas.before:
		Color:
			rgb: 0.1, 0.1, 0.1
		Rectangle:
			pos:self.pos
			size:self.size

	BoxLayout:
		id: top_bar
		orientation: 'horizontal'
		size_hint_y: 0.195
		Label:
			text:"Data UI"
			size_hint_x:0.8
		Button:
			id: btn_sim
			text:"Run Sim"
			size_hint_x: 0.2

	BoxLayout:
		orientation: 'horizontal'
		Label:
			text: 'y-axis'
			size_hint_x: 0.05
		Plot:
			id: plot
			padding: 20
	Label:
		text:"x-axis"
		size_hint_y: 0.1

<SimulationView>:
	canvas.before:
		Color:
			rgb: hex('#42f56c')
		Rectangle:
			size:self.size
			pos:self.pos

<CustomTabbedPanelItem@TabbedPanelItem>:
	

<RootLayout>:
	do_default_tab: False
	CustomTabbedPanelItem:
		id: tab_data_view
		tab_id: 'tab_data_view'
		text:"Data"
		DataView:
			id: data_view
	CustomTabbedPanelItem:
		id: tab_simulation_view
		tab_id: 'tab_simulation_view'
		text:"Simulation"
		SimulationView:
			id: simulation_view
		

RootLayout